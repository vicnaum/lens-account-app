    chrome: downloads?.chrome,
    firefox: downloads?.firefox,
    brave: downloads?.brave,
    edge: downloads?.edge,
    safari: downloads?.safari,
  };

  const browser = detectBrowser();

  const hasApps = downloads && Object.keys(downloads).length !== 0;

