    case TRON_SIGNING_METHODS.TRON_SIGN_TRANSACTION:
      const signedTransaction = await wallet.signTransaction(request.params.transaction)
      const resData = {
        result: signedTransaction
      }
      return formatJsonRpcResult(id, resData)

