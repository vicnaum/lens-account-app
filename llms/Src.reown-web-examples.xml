  setSmartSession: React.Dispatch<
    React.SetStateAction<
      | {
          grantedPermissions: SmartSessionGrantPermissionsResponse;
          dcaStrategy: DCAFormSchemaType;
        }
      | undefined
    >
  >;
  clearSmartSession: () => void;
}

const DcaApplicationContext = createContext<
