  onChange?: (e: any) => void;
  children?: React.ReactNode;
}

const SelectContainer = styled.select<SelectContainerProps>`
  width: 150px;
  background: transparent;
  color: black;
  height: 30px;
  border-radius: 4px;
  padding: 2px;
  font-size: "1.25em";
  bottom: 40px;
  left: 50px;
  direction: ltr;
  unicode-bidi: embed;
  margin: 5px;
