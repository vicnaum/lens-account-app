  preparedCalls: {
    type: string;
    data: unknown;
    chainId: `0x${string}`;
  };
  signatureRequest: {
    hash: `0x${string}`;
  };
  context: string;
};

export type SendPreparedCallsParams = {
  preparedCalls: {
    type: string;
    data: unknown;
    chainId: `0x${string}`;
  };
  signature: `0x${string}`;
  context: string;
};

export type SendPreparedCallsReturnValue = string;
