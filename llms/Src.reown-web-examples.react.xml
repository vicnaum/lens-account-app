    case "tezos":
      return Object.values(DEFAULT_TEZOS_METHODS);
    case "kadena":
      return Object.values(DEFAULT_KADENA_METHODS);
    case "bip122":
      return Object.values(DEFAULT_BIP122_METHODS);
    default:
      throw new Error(
        `No default required methods for namespace: ${namespace}`
      );
  }
};

