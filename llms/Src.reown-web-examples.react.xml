        console.log("utxos", utxos);
        const availableBalance = getAvailableBalanceFromUtxos(utxos); // in satoshis
        console.log("availableBalance", availableBalance);
        const req = {
          account: address,
          recipientAddress: address,
          amount: BIP122_DUST_LIMIT,
        };
