  const [openCreationModal, setOpenCreationModal] = useState<boolean>(false)

  return (
    <>
      <Card sx={{ p: 5, textAlign: 'center', width: 1 }}>
        <SpacesIcon />

        <Box mb={3}>
          <Typography color="text.secondary" mb={1}>
