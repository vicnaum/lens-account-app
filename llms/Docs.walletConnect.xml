  grid-gap: 1rem;
  margin-bottom: 1rem;
}

.box {
  min-height: 33%;
  border: 1px solid var(--ifm-border-color);
  border-radius: 14px;
  background: linear-gradient(135deg, var(--ifm-box-bg-color) 0, transparent 100%);
  padding-inline: 1em;
  padding-top: 1em;
  cursor: pointer;
  transition: all 0.2s ease-in-out;
}

.box h1 {
  transition: all 0.2s ease-in-out;
}

.box:hover {
  border-color: var(--ifm-color-primary);
}

