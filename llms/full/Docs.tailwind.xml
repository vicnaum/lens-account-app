import { Breadcrumb } from "@/components/breadcrumb";
import { getDocPageSlugs, getSectionAndTitleBySlug } from "../../../../(docs)/docs/api";

type Params = {
  params: Promise<{
    slug: string;
  }>;
};

export async function generateStaticParams() {
  let slugs = await getDocPageSlugs();
  return slugs.map((slug) => ({ slug }));
}

export default async function DocsTitle(props: Params) {
  let params = await props.params;
  let sectionAndTitle = getSectionAndTitleBySlug(params.slug);
  if (!sectionAndTitle) return null;

  return <Breadcrumb section={sectionAndTitle.section} title={sectionAndTitle.title} />;
}
</file>

<file path="src/app/(docs)/@breadcrumb/docs/installation/framework-guides/[...slug]/page.tsx">
import { loadGuide } from "@/app/(docs)/docs/installation/framework-guides";
import { Breadcrumb } from "@/components/breadcrumb";
import { notFound } from "next/navigation";

type Params = Promise<{
  slug: string[];
}>;

export default async function Page({ params }: { params: Params }) {
  let parts = (await params).slug;
  if (!parts) return notFound();

  let [slug] = parts.filter((part) => part.trim() !== "");

  let guide = await loadGuide(slug);
  if (!guide) return notFound();

  return <Breadcrumb section="Installation" title={guide.page.title} />;
}
</file>

