     */
    it("should process incoming mailbox messages after restart", async () => {
      const chains = ["eip155:1"];
      const accounts = ["0x0000000", "0x1111111", "0x2222222"];
      const requiredNamespaces = {
        eip155: {
          chains,
          methods: ["eth_sendTransaction"],
